<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rajeshbatth.android_testing" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".core.splash.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".core.auth.SignInActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".core.home.HomeActivity"
            android:label="@string/title_activity_home" />
        <activity
            android:name=".core.auth.SignUpActivity"
            android:label="@string/title_activity_sign_in" />
        <activity
            android:name=".ui.ClientDetailActivity"
            android:label="@string/title_activity_client_detail"
            >
        </activity>
    </application>

</manifest>
